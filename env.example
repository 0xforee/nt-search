# Frontend Environment Variables
NODE_ENV=production
REACT_APP_API_BASE_URL=http://localhost:3001/api/v1

# Docker Auto Update
# Set to true to enable automatic code pull and rebuild on container startup
# Default: true
AUTO_UPDATE=true

# Git Repository Configuration (required when AUTO_UPDATE=true)
# The git repository URL to clone code from
# Default: https://github.com/0xforee/nt-search.git
GIT_REPO_URL=https://github.com/0xforee/nt-search.git

# Git Branch (optional, defaults to 'main')
# The branch to checkout when cloning or pulling code
GIT_BRANCH=main

# Backend Environment Variables (if using)
BACKEND_PORT=3001
BACKEND_HOST=0.0.0.0

# Database Configuration (if using)
POSTGRES_DB=ntsearch
POSTGRES_USER=ntsearch
POSTGRES_PASSWORD=ntsearch123
DATABASE_URL=postgresql://ntsearch:ntsearch123@database:5432/ntsearch

# Redis Configuration (if using)
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Domain Configuration (for production)
DOMAIN=your-domain.com
WWW_DOMAIN=www.your-domain.com

# Security
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret-key

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/nt-search/app.log
